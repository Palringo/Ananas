<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_backgroud">

    <ImageView
        android:id="@+id/back_to_main"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_16dp"
        android:paddingTop="@dimen/margin_16dp"
        android:paddingBottom="@dimen/margin_16dp"
        android:src="@drawable/ic_baseline_arrow_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textSmoothness"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/iamutkarshtiwari_github_io_ananas_smooth"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/back_to_main"
        app:layout_constraintTop_toTopOf="@id/back_to_main" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/smooth_value_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:max="500"
        android:thumbTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/textPercentSmoothness"
        app:layout_constraintEnd_toStartOf="@id/textPercentSmoothness"
        app:layout_constraintStart_toEndOf="@id/textSmoothness"
        app:layout_constraintTop_toTopOf="@id/textSmoothness" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textPercentSmoothness"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintBottom_toBottomOf="@id/textSmoothness"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/back_to_main" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textSkinTone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/iamutkarshtiwari_github_io_ananas_white_skin"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/back_to_main"
        app:layout_constraintEnd_toEndOf="@id/textSmoothness"
        app:layout_constraintStart_toEndOf="@id/back_to_main" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/white_skin_value_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:max="10"
        android:thumbTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/textPercentSkinTone"
        app:layout_constraintEnd_toStartOf="@id/textPercentSkinTone"
        app:layout_constraintStart_toEndOf="@id/textSkinTone"
        app:layout_constraintTop_toTopOf="@id/textSkinTone"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textPercentSkinTone"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintBottom_toBottomOf="@id/textSkinTone"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
