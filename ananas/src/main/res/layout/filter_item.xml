<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <ImageView
        android:id="@+id/filter_image"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/filter_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/filter_image"
        android:paddingTop="@dimen/margin_4dp"
        android:paddingBottom="@dimen/margin_4dp"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:gravity="center"
        android:text="@string/iamutkarshtiwari_github_io_ananas_edit"
        android:textColor="@color/text_color"
        android:textSize="@dimen/image_edit_text_size"
        app:layout_constraintEnd_toEndOf="@id/filter_image"
        app:layout_constraintStart_toStartOf="@id/filter_image"
        app:layout_constraintTop_toBottomOf="@id/filter_image"
        tools:text="Text"
        tools:textColor="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>
